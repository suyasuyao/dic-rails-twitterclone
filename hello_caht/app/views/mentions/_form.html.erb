<%= form_with(model: @mention, local: true,url: choose_new_or_edit , class: "mention") do |f| %>

<% if @mention.errors.any? %>
<div id="error_explanation">
  <h2><%= @mention.errors.count %>件のエラーがあります。</h2>
  <ul>
    <% @mention.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="mention">
  <ul>
    <li>
      <%= f.label "発言" %>
      <%= f.text_field :content %>
    </li>
    <li>
      <%= f.submit class: "submit" %>
    </li>
  </ul>

</div>



<% end %>